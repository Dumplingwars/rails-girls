<h1>Listing ides</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>String</th>
      <th>Description</th>
      <th>Picture</th>
      <th>String</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ides.each do |ide| %>
      <tr>
        <td><%= ide.name %></td>
        <td><%= ide.string %></td>
        <td><%= ide.description %></td>
        <td><%= ide.picture %></td>
        <td><%= ide.string %></td>
        <td><%= link_to 'Show', ide %></td>
        <td><%= link_to 'Edit', edit_ide_path(ide) %></td>
        <td><%= link_to 'Destroy', ide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

